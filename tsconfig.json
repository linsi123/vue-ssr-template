{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "jsxFactory": "h",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
        "webpack-env",
        ],
        "paths": {
        "@/*": [
            "src/*"
        ]
        },
        "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true
}
